{
	"name": "memuller/bricks",
	"type": "project",
	"description": "A delightful plugin framework for building complex Wordpress sites.",
	"authors": [
		{
			"name": "Matheus E. Muller",
			"email": "hello@memuller.com"
		}
	],

	"require": {
		"php": ">=7",
		"cmb2/cmb2": ">=2.2"
	},

	"autoload": {
		"files": [ "bricks.php" ]
	},
	"minimum-stability": "dev",
	"repositories": [
		{
			"url": "https://github.com/CMB2/CMB2.git",
			"type": "git"
		}
	],
	"extra": {
		"installer-paths": {
			"vendor/{$vendor}.{$name}": [ "type:wordpress-plugin" ]
		}
	}
}
